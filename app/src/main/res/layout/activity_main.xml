<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.kecson.sample.MainActivity">

    <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_card_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车载模式"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_night_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="夜间模式"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cb_card_mode"/>
</android.support.constraint.ConstraintLayout>